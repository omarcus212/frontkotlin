<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242734"
    tools:context=".menuframe4">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="79dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/fotoperfil" />


        <TextView
            android:layout_width="194dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="View Game"
            android:textColor="#ffff"
            android:textSize="30dp" />

        <ImageButton
            android:layout_width="77dp"
            android:layout_height="55dp"
            android:backgroundTint="#424657"
            android:src="@drawable/vector"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="408dp"
        android:layout_height="565dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        tools:layout_editor_absoluteX="3dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:src="@drawable/godofwar3" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center_vertical"
            android:text="God of war: Ascension"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:layout_width="365dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:text="This prequel to the very first game in the God of War series and the seventh game in the franchise. It is exclusive for the Sony PlayStation 3 console. The game still uses the ancient Greek mythology as visual inspiration and the primary story"
            android:textColor="#FFF"
            android:textDirection="firstStrongLtr"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="413dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:src="@drawable/nintendo" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:src="@drawable/windowsclient" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/android" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFAF29"
            android:text="Watch" />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>